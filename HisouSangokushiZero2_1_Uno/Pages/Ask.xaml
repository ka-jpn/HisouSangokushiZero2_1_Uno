<?xml version="1.0" ?>
<UserControl 
  x:Class="HisouSangokushiZero2_1_Uno.Pages.Ask"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:HisouSangokushiZero2_1_Uno.Pages"
  x:Name="Page">
  <StackPanel x:Name="Content" Background="#FDDD" HorizontalAlignment="Center" VerticalAlignment="Center" CornerRadius="5">
    <TextBlock x:Name="TitleTextBlock" HorizontalAlignment="Center"/>
    <StackPanel x:Name="TitleDetailMargin"/>
    <ScrollViewer x:Name="DetailView" Background="White">
      <StackPanel x:Name="DetailPanel" VerticalAlignment="Top"/>
    </ScrollViewer>
    <StackPanel x:Name="DetailButtonMargin"/>
    <Grid x:Name="ButtonGrid">
      <Grid.ColumnDefinitions>
        <ColumnDefinition/>
        <ColumnDefinition x:Name="ButtonMargin"/>
        <ColumnDefinition/>
      </Grid.ColumnDefinitions>
      <Button x:Name="OkButton" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FEEE">
        <TextBlock x:Name="OkButtonText"/>
      </Button>
      <Button x:Name="CloseButton" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="#FEEE">
        <TextBlock x:Name="CloseButtonText" Text="閉じる"/>
      </Button>
    </Grid>
  </StackPanel>
</UserControl>