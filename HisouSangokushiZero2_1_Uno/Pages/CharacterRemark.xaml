<?xml version="1.0" ?>
<UserControl 
  x:Class="HisouSangokushiZero2_1_Uno.Pages.CharacterRemark"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:HisouSangokushiZero2_1_Uno.Pages"
  xmlns:skia="using:SkiaSharp.Views.Windows"
  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed">
  <Grid Background="#FDDD" HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel Padding="2.5,0,2.5,2.5">
      <StackPanel Orientation="Horizontal">
        <Grid VerticalAlignment="Center">
          <Path x:Name="RemarkFrame" StrokeThickness="0.8" Stroke="Black" Fill="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
          <TextBlock x:Name="RemarkText" MaxWidth="300"/>
        </Grid>
        <StackPanel VerticalAlignment="Center">
          <StackPanel Height="15"/>
          <Image x:Name="PersonImage" Source="ms-appx:///Assets/Svg/Person/武官.svg" Width="{x:Bind local:CharacterRemark.personImageSize}" Height="{x:Bind local:CharacterRemark.personImageSize}"/>
          <TextBlock x:Name="PersonName" HorizontalAlignment="Center" Height="15"/>
        </StackPanel>
      </StackPanel>
      <StackPanel Height="2.5"/>
      <StackPanel x:Name="buttonPanel" Orientation="Horizontal" HorizontalAlignment="Center">
      </StackPanel>
    </StackPanel>
    <Button x:Name="CloseButton" Width="20" Height="15" Background="#2F00" HorizontalAlignment="Right" VerticalAlignment="Top">
      <Image Source="ms-appx:///Assets/Svg/close.svg"/>
    </Button>
  </Grid>
</UserControl>