<?xml version="1.0" ?>
<UserControl 
  x:Class="HisouSangokushiZero2_1_Uno.Pages.CharacterRemark"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:skia="using:SkiaSharp.Views.Windows"
  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Visibility="Collapsed">
  <Grid Background="#FDDD" HorizontalAlignment="Center" VerticalAlignment="Center">
    <StackPanel Padding="5,0,5,5">
      <StackPanel Orientation="Horizontal">
        <Grid VerticalAlignment="Center">
          <Path x:Name="RemarkFrame" StrokeThickness="1" Stroke="Black" Fill="White" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
          <TextBlock x:Name="RemarkText" MaxWidth="550" />
        </Grid>
        <StackPanel VerticalAlignment="Center">
          <StackPanel Height="30"/>
          <Grid x:Name="PersonImagePanel"/>
          <TextBlock x:Name="PersonName" HorizontalAlignment="Center" Height="30"/>
        </StackPanel>
      </StackPanel>
      <StackPanel Height="5"/>
      <StackPanel x:Name="buttonPanel" Orientation="Horizontal" HorizontalAlignment="Center">
      </StackPanel>
    </StackPanel>
    <Button x:Name="CloseButton" Width="40" Height="30" Background="#2F00" HorizontalAlignment="Right" VerticalAlignment="Top">
      <Image Source="/Assets/Svg/close.svg"/>
    </Button>
  </Grid>
</UserControl>