<?xml version="1.0" ?>
<UserControl 
  x:Class="HisouSangokushiZero2_1_Uno.Pages.ProductionInfo"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:data="using:HisouSangokushiZero2_1_Uno.Data">
  <Grid>
    <ScrollViewer HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
      <StackPanel x:Name="ContentPanel" Padding="2">
        <StackPanel Height="10"/>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
          <TextBlock Text="ゲームバージョン"/>
          <TextBlock Text="　ver."/>
          <TextBlock Text="{x:Bind data:BaseData.version.Value}"/>
        </StackPanel>
        <StackPanel Height="10"/>
        <Button x:Name="UpdateNoteButton" Width="350" Height="50" HorizontalAlignment="Center" Background="#AFFF" BorderBrush="Black">
          <TextBlock Text="更新履歴"/>
        </Button>
        <StackPanel Height="20"/>
        <Button x:Name="AdditionalNoteButton" Width="350" Height="50" HorizontalAlignment="Center" Background="#AFFF" BorderBrush="Black">
          <TextBlock Text="補記"/>
        </Button>
        <StackPanel Height="10"/>
        <TextBlock Text="制作：かりんとう" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="スペシャルサンクス：弁さん" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock Text="弁さんに列伝の記入をご協力いただきました" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Height="20"/>
        <TextBlock Text="かりんとうゲームズ" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Height="10"/>
      </StackPanel>
    </ScrollViewer>
    <Grid x:Name="ProductionInfoContentPanel"/>
  </Grid>
</UserControl>