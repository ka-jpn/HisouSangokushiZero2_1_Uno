<?xml version="1.0" ?>
<UserControl
  x:Class="HisouSangokushiZero2_1_Uno.Pages.GameLog"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:HisouSangokushiZero2_1_Uno.Pages">
  <UserControl.Resources>
    <DataTemplate x:Key="LogMessageView" x:DataType="x:String">
      <TextBlock VerticalAlignment="Center" Text="{x:Bind}"/>
    </DataTemplate>
  </UserControl.Resources>
  <Grid x:Name="Content" Background="#CEFE">
    <ListView x:Name="LogsPanel" ItemsSource="{x:Bind local:GameLog.logMessages,Mode=OneWay}" ItemTemplate="{StaticResource LogMessageView}"/>
  </Grid>
</UserControl>