<?xml version="1.0" ?>
<UserControl 
  x:Class="HisouSangokushiZero2_1_Uno.Pages.StateInfo"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:code="using:HisouSangokushiZero2_1_Uno.Code">
  <Grid x:Name="Content" Background="#FFF">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="4*"/>
      <ColumnDefinition x:Name="ButtonArea" Width="*"/>
    </Grid.ColumnDefinitions>
    <Grid x:Name="InfoContentsPanel" Grid.Column="0" VerticalAlignment="Stretch"/>
    <Button x:Name="NextButton" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,1" Background="#7777">
      <TextBlock x:Name="NextButtonText"/>
    </Button>
  </Grid>
</UserControl>