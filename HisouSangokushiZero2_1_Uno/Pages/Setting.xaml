<?xml version="1.0" ?>
<UserControl 
  x:Class="HisouSangokushiZero2_1_Uno.Pages.Setting"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  HorizontalAlignment="Center">
  <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <StackPanel Height="20"/>
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
      <TextBlock Text="現在のビューモード：" VerticalAlignment="Center"/>
      <TextBlock x:Name="ViewModeText" VerticalAlignment="Center" Width="100"/>
      <Button x:Name="InnerSwitchViewModeButton" Width="400" Height="60" Background="#AFFF" BorderBrush="Black">
        <TextBlock Text="モードを切り替える"/>
      </Button>
    </StackPanel>
    <StackPanel Height="40"/>
    <Button x:Name="InitGameButton" Width="500" Height="100" HorizontalAlignment="Center" Background="#AFFF" BorderBrush="Black">
      <TextBlock Text="ゲームを初期化"/>
    </Button>
  </StackPanel>
</UserControl>