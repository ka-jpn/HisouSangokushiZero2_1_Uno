<?xml version="1.0" ?>
<UserControl 
  x:Class="HisouSangokushiZero2_1_Uno.Pages.WinCond"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:HisouSangokushiZero2_1_Uno.Pages"
  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
  <UserControl.Resources>
    <DataTemplate x:Key="WinCondListView" x:DataType="local:WinCondData">
      <Grid MinHeight="0" Background="{x:Bind Brush}" HorizontalAlignment="Stretch">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="100"/>
          <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.Column="0" Text="{x:Bind Country}" Margin="1" TextAlignment="Center" VerticalAlignment="Center"/>
        <StackPanel Grid.Column="1" Margin="1"  VerticalAlignment="Center">
          <TextBlock Text="{x:Bind WinCondText1}" TextAlignment="Start"/>
          <TextBlock Text="{x:Bind WinCondText2}" TextAlignment="Start"/>
        </StackPanel>
      </Grid>
    </DataTemplate>
  </UserControl.Resources>
  <ScrollViewer x:Name="Scroll" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <StackPanel x:Name="ContentPanel">
      <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
        <TextBlock FontFamily="{StaticResource Source Han Sans JP Bold}" Text="シナリオ１："/>
        <TextBlock x:Name="WinCondScenarioName1" FontFamily="{StaticResource Source Han Sans JP Bold}"/>
      </StackPanel>
      <ListView x:Name="WinCondListView1" MaxWidth="1500" Height="500" ItemsSource="{x:Bind winCondDataList1,Mode=OneWay}" ItemTemplate="{StaticResource WinCondListView}" Background="#CCC"/>
      <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
        <TextBlock FontFamily="{StaticResource Source Han Sans JP Bold}" Text="シナリオ２："/>
        <TextBlock x:Name="WinCondScenarioName2" FontFamily="{StaticResource Source Han Sans JP Bold}"/>
      </StackPanel>
      <ListView x:Name="WinCondListView2" MaxWidth="1500" Height="500" ItemsSource="{x:Bind winCondDataList2,Mode=OneWay}" ItemTemplate="{StaticResource WinCondListView}" Background="#CCC"/>
    </StackPanel>
  </ScrollViewer>
</UserControl>