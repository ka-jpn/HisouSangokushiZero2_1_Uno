<?xml version="1.0" ?>
<UserControl
  x:Class="HisouSangokushiZero2_1_Uno.Pages.LogPanel"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:local="using:HisouSangokushiZero2_1_Uno.Pages">
  <UserControl.Resources>
    <DataTemplate x:Key="LogMessageView" x:DataType="local:LogMessage">
      <TextBlock VerticalAlignment="Center" Text="{x:Bind Text}"/>
    </DataTemplate>
  </UserControl.Resources>
  <Grid x:Name="Content">
    <ListView x:Name="LogsPanel" ItemsSource="{x:Bind local:LogPanel.logMessages,Mode=OneWay}" ItemTemplate="{StaticResource LogMessageView}"  Background="#AEFE"/>
  </Grid>
</UserControl>