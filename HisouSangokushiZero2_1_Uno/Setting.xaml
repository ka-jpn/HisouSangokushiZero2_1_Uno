<?xml version="1.0" ?>
<UserControl 
  x:Class="HisouSangokushiZero2_1_Uno.Setting"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  HorizontalAlignment="Center">
  <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
    <Button x:Name="InitGameButton" Width="500" HorizontalAlignment="Center" Background="#AFFF" BorderBrush="Black" Padding="30" Margin="20">
      <TextBlock Text="ゲームを初期化"/>
    </Button>
    <StackPanel Orientation="Horizontal" Margin="20" HorizontalAlignment="Center">
      <TextBlock Text="現在のビューモード：" VerticalAlignment="Center"/>
      <TextBlock x:Name="ViewModeText" VerticalAlignment="Center" Width="100"/>
      <Button x:Name="InnerSwitchViewModeButton" Width="400" Background="#AFFF" BorderBrush="Black" Padding="10">
        <TextBlock Text="モードを切り替える"/>
      </Button>
    </StackPanel>
  </StackPanel>
</UserControl>