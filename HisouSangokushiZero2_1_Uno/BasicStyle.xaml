<ResourceDictionary
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <FontFamily x:Key="Bold">ms-appx:///Assets/Fonts/SourceHanSansJP-Bold.otf#Source Han Sans JP Bold</FontFamily>
  <Style TargetType="TextBlock">
    <Setter Property="FontSize" Value="24"/>
    <Setter Property="LineHeight" Value="25"/>
    <Setter Property="Padding" Value="0,2.5,0,-2.5"/>
    <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
    <Setter Property="Foreground" Value="#C000"/>
  </Style>
  <Style TargetType="Button">
    <Setter Property="Padding" Value="0"/>
  </Style>
  <Style TargetType="ScrollViewer">
    <Setter Property="HorizontalScrollMode" Value="Enabled"/>
    <Setter Property="HorizontalScrollBarVisibility" Value="Auto"/>
  </Style>
  <Style TargetType="ComboBox">
    <Setter Property="FontSize" Value="24"/>
  </Style>
</ResourceDictionary>